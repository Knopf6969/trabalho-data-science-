import pandas as pd
import matplotlib.pyplot as plt
import re # Necessário para a função de transformação de texto
# %matplotlib inline # Descomente se estiver no Jupyter Notebook

# --- 1. FUNÇÃO DE TRANSFORMAÇÃO (CRITÉRIO DO PROJETO) ---
def transformar_idade(faixa_idade):
    """
    Recebe uma faixa etária textual e devolve um número (ponto médio) que a representa.
    """
    faixa_idade = str(faixa_idade).strip()

    if 'Abaixo de 12' in faixa_idade:
        return 6  # Ponto médio representativo (0-12)
    elif 'Mais de 65' in faixa_idade:
        return 70 # Valor representativo acima de 65
    elif 'Entre' in faixa_idade:
        # Usa regex para encontrar os dois números na string
        numeros = re.findall(r'\d+', faixa_idade)
        if len(numeros) == 2:
            limite_inferior = int(numeros[0])
            limite_superior = int(numeros[1])
            return (limite_inferior + limite_superior) / 2
        else:
            return pd.NA
    else:
        return pd.NA

# --- 2. CARREGAR E PREPARAR OS DADOS ---
# O arquivo original era 'pesquisa_sono.xlsx'.
# Assumindo que o arquivo CSV transformado ('pesquisa_sono_transformada.csv')
# já foi gerado e está pronto para uso.
try:
    df = pd.read_csv('pesquisa_sono_transformada.csv', sep=',')
except FileNotFoundError:
    print("Erro: O arquivo 'pesquisa_sono_transformada.csv' não foi encontrado.")
    print("Certifique-se de ter executado o script de transformação ou use o arquivo 'pesquisa_sono.xlsx' original.")
    # Se o CSV transformado não existir, carregamos o Excel e aplicamos a transformação
    try:
        df = pd.read_excel('pesquisa_sono.xlsx')
        df.columns = ['idade', 'horaDormir', 'horaSono', 'transtorno', 'qualTranstorno', 'comidas', 'atividadesFisicas', 'streamings', 'senteSono', 'leitura', 'FaltaSono', 'QualidadeSono', 'SonolenciaAlta', 'Resumo']
        df['idade_numerica'] = df['idade'].apply(transformar_idade)
    except FileNotFoundError:
        print("Erro: Nem 'pesquisa_sono_transformada.csv' nem 'pesquisa_sono.xlsx' foram encontrados.")
        exit()

# Remover coluna de data e hora (se existir)
if 'Carimbo de data/hora' in df.columns:
    df = df.drop(columns=['Carimbo de data/hora'])

# --- 3. CRIAÇÃO DE CATEGORIAS (CÓDIGO ORIGINAL CORRIGIDO) ---

# Categorizar atividade física
def cat_atividade(v):
    if v <= 3:
        return 'Baixa'
    elif v <= 7:
        return 'Moderada'
    else:
        return 'Alta'

df['AtividadeCategoria'] = df['atividadesFisicas'].apply(cat_atividade)

# Categorizar comida
def cat_comida(v):
    if v <= 3:
        return 'Baixa'
    elif v <= 7:
        return 'Moderada'
    else:
        return 'Alta'

df['ComidaCategoria'] = df['comidas'].apply(cat_comida)

# Categorizar streaming
def cat_stream(v):
    if v <= 3:
        return 'Baixo'
    elif v <= 7:
        return 'Moderado'
    else:
        return 'Alto'

df['StreamingCategoria'] = df['streamings'].apply(cat_stream)

# Categorizar sonolência
def cat_sono(v):
    if v <= 3:
        return 'Baixa'
    elif v <= 6:
        return 'Moderada'
    else:
        return 'Alta'

df['SonolenciaCategoria'] = df['senteSono'].apply(cat_sono)

# Qualidade do sono
df['QualidadeSono'] = df['horaSono'].apply(lambda x: 'Ruim' if x < 7 else 'Boa')

# --- 4. TABELAS DE PROBABILIDADE (%) (CÓDIGO ORIGINAL CORRIGIDO) ---

tab_atividade_qualidade = pd.crosstab(df['AtividadeCategoria'], df['QualidadeSono'], normalize='index') * 100
tab_comida_qualidade = pd.crosstab(df['ComidaCategoria'], df['QualidadeSono'], normalize='index') * 100
tab_stream_qualidade = pd.crosstab(df['StreamingCategoria'], df['QualidadeSono'], normalize='index') * 100
tab_transtorno_sono = pd.crosstab(df['transtorno'], df['QualidadeSono'], normalize='index') * 100
tab_sono_atividade = pd.crosstab(df['AtividadeCategoria'], df['SonolenciaCategoria'], normalize='index') * 100

print("Tabela de Atividade Física x Qualidade do Sono:")
print(tab_atividade_qualidade.round(2))

# --- 5. GRÁFICOS – RELAÇÕES VISUAIS (CÓDIGO ORIGINAL CORRIGIDO) ---

# Gráfico 1
tab_atividade_qualidade.plot(kind='bar', figsize=(8,5))
plt.title('Atividade Física x Qualidade do Sono (%)')
plt.ylabel('Percentual')
plt.show()

# Gráfico 2
tab_sono_atividade.plot(kind='bar', figsize=(8,5))
plt.title('Atividade Física x Nível de Sonolência (%)')
plt.ylabel('Percentual')
plt.show()

# Gráfico 3
tab_comida_qualidade.plot(kind='bar', figsize=(8,5))
plt.title('Comida x Qualidade do Sono (%)')
plt.ylabel('Percentual')
plt.show()

# Gráfico 4
tab_stream_qualidade.plot(kind='bar', figsize=(8,5))
plt.title('Streaming x Qualidade do Sono (%)')
plt.ylabel('Percentual')
plt.show()

# --- 6. NOVA ANÁLISE (IMPACTO PRÁTICO) ---
# Análise de correlação usando a nova coluna numérica
correlacao = df['idade_numerica'].corr(df['horaSono'])

print(f"\nCorrelação de Pearson entre Idade e Horas de Sono: {correlacao:.4f}")

# Visualização da relação (Scatter Plot)
plt.figure(figsize=(10, 6))
plt.scatter(df['idade_numerica'], df['horaSono'], alpha=0.6)
plt.title('Relação entre Idade (Numérica) e Horas de Sono')
plt.xlabel('Idade Representativa (Ponto Médio da Faixa)')
plt.ylabel('Horas de Sono')
plt.grid(True, linestyle='--', alpha=0.7)
plt.show()
